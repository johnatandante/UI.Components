<UserControl x:Class="UI.Components.TextBoxPro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="UOMControl"             
             mc:Ignorable="d" d:DesignHeight="30" d:DesignWidth="300">
    <TextBox x:Name="SourceTextBox" 
             Text="{Binding SourceText, ElementName=UOMControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
             TextChanged="SourceTextBox_TextChanged"
             GotFocus="SourceTextBox_GotFocus"
             LostFocus="SourceTextBox_LostFocus"
             FontStyle="{Binding CustomFontStyle, ElementName=UOMControl, Mode=TwoWay}"
             Foreground="{Binding CustomForeground, ElementName=UOMControl, Mode=TwoWay}"
             />
</UserControl>
